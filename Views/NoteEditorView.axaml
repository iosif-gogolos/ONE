<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="using:ONE.Models"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450"
             x:Class="ONE.Views.NoteEditorView"
             x:DataType="models:Note">
  
    <ScrollViewer>
        <StackPanel Margin="32,24">
            <TextBox Text="{Binding Title}" 
                     FontSize="32" 
                     FontWeight="Bold"
                     Background="Transparent"
                     BorderThickness="0"
                     Watermark="Untitled"
                     Margin="0,0,0,24"/>
            
            <TextBox Text="{Binding Content}"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     Background="Transparent"
                     BorderThickness="0"
                     FontSize="16"
                     MinHeight="400"
                     Watermark="Start writing..."
                     Name="ContentEditor"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
